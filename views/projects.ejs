<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Management - CodeWiki Generator</title>
  <link rel="stylesheet" href="/public/style.css">
  <link rel="stylesheet" href="/public/projects.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Project Management</h1>
      <p class="version">v<%= version %></p>
      <nav class="header-nav">
        <a href="/" class="nav-link">Dashboard</a>
        <a href="/planning" class="nav-link">Planning</a>
        <a href="/projects" class="nav-link active">Projects</a>
        <a href="/analytics" class="nav-link">Analytics</a>
      </nav>
    </header>

    <main>
      <section class="projects-header">
        <div class="header-controls">
          <h2>Wiki Projects</h2>
          <div class="action-buttons">
            <button type="button" id="createProjectBtn" class="btn btn-primary">+ Create Project</button>
            <button type="button" id="importProjectBtn" class="btn btn-secondary">Import Project</button>
          </div>
        </div>
        <p class="section-description">Manage your wiki documentation projects</p>
      </section>

      <section class="projects-comparison">
        <div class="comparison-toggle">
          <button type="button" id="toggleComparisonBtn" class="btn-toggle">Compare Projects</button>
        </div>
        <div id="comparisonView" class="comparison-view" style="display: none;">
          <div class="comparison-selector">
            <div class="form-group">
              <label for="compareProject1">Project 1:</label>
              <select id="compareProject1" class="comparison-select">
                <option value="">Select project...</option>
              </select>
            </div>
            <div class="form-group">
              <label for="compareProject2">Project 2:</label>
              <select id="compareProject2" class="comparison-select">
                <option value="">Select project...</option>
              </select>
            </div>
          </div>
          <div id="comparisonResults" class="comparison-results" style="display: none;">
            <table class="comparison-table">
              <thead>
                <tr>
                  <th>Metric</th>
                  <th id="project1Name">Project 1</th>
                  <th id="project2Name">Project 2</th>
                </tr>
              </thead>
              <tbody id="comparisonTableBody">
                <!-- Populated dynamically -->
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <section class="projects-grid">
        <div id="emptyState" class="empty-state" style="display: none;">
          <p>No projects yet. Create your first project to get started!</p>
        </div>
        <div id="projectsContainer" class="projects-container">
          <!-- Project cards will be inserted here -->
        </div>
      </section>
    </main>

    <footer>
      <p>CodeWiki Generator - Project Management</p>
    </footer>
  </div>

  <!-- Create Project Modal -->
  <div id="createModal" class="modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Create New Project</h2>
        <button type="button" class="modal-close" id="closeCreateModal">&times;</button>
      </div>
      <form id="createProjectForm">
        <div class="form-group">
          <label for="projectName">Project Name <span class="required">*</span></label>
          <input
            type="text"
            id="projectName"
            name="name"
            placeholder="my-awesome-project"
            pattern="[a-z0-9-]+"
            required
          >
          <small>Use lowercase letters, numbers, and hyphens only</small>
        </div>

        <div class="form-group">
          <label for="projectDisplayName">Display Name <span class="required">*</span></label>
          <input
            type="text"
            id="projectDisplayName"
            name="displayName"
            placeholder="My Awesome Project"
            required
          >
        </div>

        <div class="form-group">
          <label for="projectDescription">Description</label>
          <textarea
            id="projectDescription"
            name="description"
            rows="3"
            placeholder="Brief description of this project"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="projectRepository">Repository URL</label>
          <input
            type="url"
            id="projectRepository"
            name="repository"
            placeholder="https://github.com/owner/repo"
          >
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="projectTheme">Theme</label>
            <select id="projectTheme" name="theme">
              <option value="default">Default</option>
              <option value="dark">Dark</option>
              <option value="light">Light</option>
            </select>
          </div>

          <div class="form-group">
            <label for="projectMaxPageSize">Max Page Size</label>
            <input
              type="number"
              id="projectMaxPageSize"
              name="maxPageSize"
              value="5000"
              min="1000"
              max="50000"
            >
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="cancelCreateBtn">Cancel</button>
          <button type="submit" class="btn btn-primary" id="saveCreateBtn">
            <span class="btn-text">Create Project</span>
            <span class="btn-loading" style="display: none;">Creating...</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Import Project Modal -->
  <div id="importModal" class="modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Import Project</h2>
        <button type="button" class="modal-close" id="closeImportModal">&times;</button>
      </div>
      <form id="importProjectForm">
        <div class="form-group">
          <label for="importSourcePath">Source Directory Path <span class="required">*</span></label>
          <input
            type="text"
            id="importSourcePath"
            name="sourcePath"
            placeholder="/path/to/existing/wiki"
            required
          >
          <small>Absolute path to the wiki directory to import</small>
        </div>

        <div class="form-group">
          <label for="importProjectName">Project Name <span class="required">*</span></label>
          <input
            type="text"
            id="importProjectName"
            name="name"
            placeholder="imported-project"
            pattern="[a-z0-9-]+"
            required
          >
          <small>Use lowercase letters, numbers, and hyphens only</small>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="cancelImportBtn">Cancel</button>
          <button type="submit" class="btn btn-primary" id="saveImportBtn">
            <span class="btn-text">Import Project</span>
            <span class="btn-loading" style="display: none;">Importing...</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Project Settings Modal -->
  <div id="settingsModal" class="modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Project Settings</h2>
        <button type="button" class="modal-close" id="closeSettingsModal">&times;</button>
      </div>
      <form id="settingsForm">
        <input type="hidden" id="settingsProjectId" name="projectId">

        <div class="form-group">
          <label for="settingsTheme">Theme</label>
          <select id="settingsTheme" name="theme">
            <option value="default">Default</option>
            <option value="dark">Dark</option>
            <option value="light">Light</option>
          </select>
        </div>

        <div class="form-group">
          <label for="settingsMaxPageSize">Max Page Size</label>
          <input
            type="number"
            id="settingsMaxPageSize"
            name="maxPageSize"
            min="1000"
            max="50000"
          >
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="cancelSettingsBtn">Cancel</button>
          <button type="submit" class="btn btn-primary" id="saveSettingsBtn">
            <span class="btn-text">Save Settings</span>
            <span class="btn-loading" style="display: none;">Saving...</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="modal" style="display: none;">
    <div class="modal-content modal-small">
      <div class="modal-header">
        <h2>Confirm Delete</h2>
        <button type="button" class="modal-close" id="closeDeleteModal">&times;</button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this project?</p>
        <p class="project-name-display" id="deleteProjectName"></p>
        <p class="warning-text">This action cannot be undone. All wiki pages will be permanently deleted.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="cancelDeleteBtn">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
          <span class="btn-text">Delete Project</span>
          <span class="btn-loading" style="display: none;">Deleting...</span>
        </button>
      </div>
    </div>
  </div>

  <script src="/public/projects.js"></script>
</body>
</html>
